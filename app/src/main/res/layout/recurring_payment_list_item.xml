<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp">


    <TextView
        android:id="@+id/recurring_payment_list_item_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recurring_payment_list_item_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recurring_payment_list_item_name"
        android:layout_below="@+id/recurring_payment_list_item_name"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/recurring_payment_list_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/recurring_payment_list_item_edit"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/ic_location_searching_black_24dp" />

    <TextView
        android:id="@+id/recurring_payment_list_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recurring_payment_list_item_date"
        android:layout_below="@+id/recurring_payment_list_item_date"
        android:text="TextView" />
</android.widget.RelativeLayout>