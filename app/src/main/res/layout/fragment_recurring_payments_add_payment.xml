<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.uid.team5.project.shared.drawer_fragments.family_group.FamilyGroupAddMemberFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/recurring_payment_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Payment "
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/recurring_payment_add_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recurring_payment_add_category"
        android:layout_marginTop="40dp"
        android:contentDescription="0.0"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/recurring_payment_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginTop="24dp"
        android:entries="@array/expense_categories"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="Add payment"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recurring_payment_add_name"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="35dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recurring_payment_add_amount"
        android:layout_below="@+id/recurring_payment_add_name"
        android:layout_marginTop="30dp"
        android:text="Category" />

    <Button
        android:id="@+id/recurring_payment_add_payment_save"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/recurring_payment_add_date"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/textView8"
        android:background="@color/colorPrimaryDark"
        android:text="Save"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recurring_payment_add_amount"
        android:layout_alignStart="@+id/recurring_payment_add_amount"
        android:layout_marginBottom="41dp"
        android:text="Amount" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recurring_payment_add_amount"
        android:layout_below="@+id/recurring_payment_add_amount"
        android:layout_marginTop="38dp"
        android:text="Date" />

    <EditText
        android:id="@+id/recurring_payment_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:ems="10"
        android:hint="First of month"
        android:inputType="textPersonName" />
</RelativeLayout>
