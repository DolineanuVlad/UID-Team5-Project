<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uid.team5.project.shared.drawer_fragments.family_group.FamilyGroupAddMemberFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/family_group_add_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="user@email.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/family_group_add_member_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/family_group_add_member_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="147dp"
        android:contentDescription="0.0"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/family_group_add_member_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/family_group_add_member_name"
        android:layout_marginTop="74dp"
        android:entries="@array/family_group_roles"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/family_group_add_member_budget"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Add member"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/family_group_add_member_budget"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="37dp"
        android:text="Email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/family_group_add_member_roles"
        android:layout_alignStart="@+id/family_group_add_member_budget"
        android:layout_marginBottom="32dp"
        android:text="Role" />

    <Button
        android:id="@+id/family_group_add_member_save"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/family_group_add_member_budget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:background="@color/colorPrimaryDark"
        android:text="Save"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/family_group_add_member_budget"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="33dp"
        android:text="Budget" />
</RelativeLayout>
