<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/create_group_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/bulb" />

    <TextView
        android:id="@+id/create_group_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/create_group_user_email"
        android:layout_alignTop="@+id/create_group_user_icon"
        android:text="Food &amp; Drink"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/create_group_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/create_group_user_icon"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/create_group_user_icon"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="visible" />

</RelativeLayout>