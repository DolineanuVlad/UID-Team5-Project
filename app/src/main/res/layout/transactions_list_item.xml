<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/transactions_item_category_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/bulb" />

    <TextView
        android:id="@+id/transactions_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/transactions_item_category_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/transactions_item_category_image"
        android:text="Food &amp; Drink"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/transactions_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/transactions_item_category"
        android:layout_below="@+id/transactions_item_category"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/transactions_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transactions_item_category"
        android:layout_toStartOf="@+id/textView12"
        android:text="TextView"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/transactions_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transactions_item_description"
        android:layout_alignStart="@+id/transactions_item_amount"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/transactions_item_amount"
        android:layout_alignBottom="@+id/transactions_item_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="5dp"
        android:text="RON"
        android:textColor="@android:color/holo_red_light"
        tools:text="RON" />
</RelativeLayout>